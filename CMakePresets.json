      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build_static",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_STATIC": "ON",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
